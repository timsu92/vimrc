{
	"$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json#",
	"configurations": {
		"launch - C family": {
			"adapter": "vscode-cpptools",
			"filetypes": [
				"cpp",
				"c",
				"objc",
				"rust"
			],
			"configuration": {
				"type":"cppdbg",
				"request": "launch",
				"program": "${workspaceRoot}/a.out",
				"args": [],
				"cwd": "${workspaceRoot}",
				"environment": [],
				"externalConsole": true,
				"MIMode": "gdb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for gdb",
						"text": "-enable-pretty-printing",
						"ignoreFailures": true
					}
				],
				"stopAtEntry": false
			},
			"breakpoints": {
				"exception": {
					"cpp_catch": "N",
					"cpp_throw": "Y",
					"all": "Y"
				}
			}
		},
		"launch - C family - input from in": {
			"default": true,
			"extends": "launch - C family",
			"filetypes": [
				"cpp",
				"c",
				"objc"
			],
			"configuration": {
				"args": ["<", "in"]
			},
			"variables": {
				"BUILD_IGNORED": {
					"shell": ["g++", "-g", "${relativeFile}"],
					"cwd": "${workspaceRoot}"
				}
			}
		},
		"launch - C family - make":{
			"extends": "launch - C family",
			"configuration": {
				"program": "${workspaceRoot}/${compiledFileName:a.out}"
			},
			"variables": {
				"BUILD_IGNORED": {
					"shell": ["make"],
					"cwd": "${workspaceRoot}"
				}
			}
		},
		"launch - C family - make - input from in":{
			"default": true,
			"extends": "launch - C family - make",
			"configuration": {
				"args": ["${args}"]
			},
			"variables":{
				"args":{
					"shell": ["cat", "in"],
					"cwd": "${workspaceRoot}"
				}
			}
		},
		"launch - Python":{
			"adapter":"debugpy",
			"filetypes": ["python"],
			"configuration": {
				"type": "python",
				"request": "launch",
				"console": "externalTerminal",
				"python": "${PYTHON}"
			},
			"breakpoints": {
				"exception": {
					"raised": "N",
					"uncaught": "Y",
					"userUnhandled": "Y"
				}
			},
			"variables":{
				"PYTHON":{
					"shell": ["which", "python"]
				}
			},
			"autoselect": false
		},
		"launch - Python - one file":{
			"extends": "launch - Python",
			"filetypes": ["python"],
			"default": true,
			"configuration": {
				"cwd": "${workspaceRoot}",
				"program": "${relativeFile}"
			}
		}
	}
}
